{
    "name": "specbook",
    "publisher": "specbook",
    "displayName": "SpecBook",
    "description": "SpecBook VS Code Extension",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "specbook.openPanel",
                "title": "SpecBook: Open Panel",
                "icon": "$(notebook)"
            }
        ],
        "keybindings": [
            {
                "command": "specbook.openPanel",
                "key": "ctrl+shift+b",
                "mac": "cmd+shift+b"
            }
        ]
    },
    "scripts": {
        "build": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "clean": "rm -rf dist *.tsbuildinfo",
        "dev": "node esbuild.js --watch",
        "package": "vsce package"
    },
    "dependencies": {
        "@specbook/shared": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.19.33",
        "@types/vscode": "^1.96.0",
        "esbuild": "^0.27.3",
        "typescript": "^5.7.3"
    }
}
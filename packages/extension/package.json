{
    "name": "@specbook/extension",
    "displayName": "SpecBook",
    "description": "SpecBook VS Code Extension",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "specbook.openPanel",
                "title": "SpecBook: Open Panel"
            }
        ]
    },
    "scripts": {
        "build": "tsc -b",
        "clean": "rm -rf dist *.tsbuildinfo",
        "dev": "tsc -b --watch",
        "package": "vsce package"
    },
    "dependencies": {
        "@specbook/shared": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.19.33",
        "@types/vscode": "^1.96.0",
        "typescript": "^5.7.3"
    }
}